<div class="container">
	<div class="row">
		<div class="col-md-12 cart-item-01 ">

      <br>
      <div class="panel-heading-cart">
        <div class="panel-title-cart">
          <div class="row">
            <div class="col-md-12 col-xs-12">
              Shopping Details
            </div>
          </div>
        </div>
      </div>
			<div class="panel panel-info">

        <div class="panel-heading">
					<div class="panel-title">
						<div class="row">
							<div class="col-md-6 col-xs-6">
								Product
							</div>
              <div class="col-md-3 col-xs-3 text-center">
								Price
							</div>
							<div class="col-md-3 col-xs-3 text-center">
								Quantity
							</div>
						</div>
					</div>
				</div>
				<div class="panel-body">
          <% current_cart.cart_items.each do |cart_item| %>
					<div class="row">
						<div class="col-xs-2">
              <%= link_to product_path(cart_item.product) do %>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.small.url) %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
						</div>
						<div class="col-xs-4">
							<div class="product-name-cart"><strong>
                <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
              </strong></div>
						</div>
						<div class="col-xs-3 text-center">
							<h6>
              <strong>
                $ <%= cart_item.product.price %>
              </strong></h6>
						</div>
						<div class="col-xs-3 text-center">
              <%= cart_item.quantity %>
						</div>
					</div>
          <hr>

          <% end %>
					<div class="row">
						<div class="text-right">
							<div class="col-xs-12 total-size">
								Total: <span class="total-price-item">$ <%= render_cart_total_price(current_cart) %> </span>
							</div>
						</div>
					</div>
				</div>
			</div>

      <br>

      <div class="panel-heading-cart">
        <div class="panel-title-cart">
          <div class="row">
            <div class="col-md-12 col-xs-12">
              Order Details
            </div>
          </div>
        </div>
      </div>

      <div class="panel panel-info">
        <%= simple_form_for @order do |f| %>
        <div class="panel-heading">
          <div class="panel-title">
            <div class="row">
              <div class="col-md-12 col-xs-12">
                Conatct:
              </div>

            </div>
          </div>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group col-lg-12">
                <%= f.input :billing_name  %>
              </div>
              <div class="form-group col-lg-12">
                <%= f.input :billing_address  %>
              </div>
            </div>
          </div>
        </div>
        <hr>
        <div class="panel-heading">
          <div class="panel-title">
            <div class="row">
              <div class="col-md-12 col-xs-12">
                Consignee:
              </div>

            </div>
          </div>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group col-lg-12">
               <%= f.input :shipping_name  %>
              </div>
              <div class="form-group col-lg-12">
                <%= f.input :shipping_address  %>
              </div>
            </div>

          </div>
        </div>


        <div class="round-submit-cart-pay">
          <br>
          <%= f.submit "Generate Order", class: "round-submit-button-cart-pay pull-right",
                       data: { disable_with: "Submitting..." } %>
        </div>
        <% end %>
      </div>

		</div>
	</div>
</div>
